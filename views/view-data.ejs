<% include template/header %> 
    <div class="container">
     
        <div class="jumbotron text-center">
            <h1 class="display-3">Xem dữ liệu</h1>
            <p class="lead">Vào mongodb</p>
            <hr class="my-2">
            <table class="table table-striped table-bordered table-inverse table-hover">
                <thead class="thead-inverse">
                    <tr>
                        <th>Stt</th>
                        <th>Tên </th>
                        <th>Phone</th>
                        <th>Action || <a href="/add" class="btn btn-success"><i class="fa fa-plus-square" aria-hidden="true">Thêm</i></a></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% $i = 1, data.forEach(function( value ){ %> 
                        <tr>
                            <td scope="row"><%= $i++ %></td>
                            <td><%= value.name %></td>
                            <td><%= value.age %></td>
                            <td>
                                <a href="/edit/<%= value.id  %>" class="text-primary"><i class="fa fa-edit" >Sửa</i></a> ||
                                <a href="/delete/<%= value.id  %>" class="text-danger" onclick="return delete_confirm('Bạn muốn xoá không')"><i class="fa fa-remove">Xoá</i></a>
                            </td>
                        </tr>
                        <% }) %> 
                        
                    </tbody>
            </table>
        </div>
      </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script type="text/javascript">
        function delete_confirm( messege ){
            if(window.confirm( messege ) == true ){
                return true ;
            }
            return false ;
        }
    </script>
